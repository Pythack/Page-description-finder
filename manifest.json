{
  "manifest_version": 2,
  "name": "Google show image",
  "author": "Pythack",
  "version": "0.0.1",
  "description": "Adds the \"Show image\" button. ",
  "content_scripts": [
  {
    "matches": ["https://www.google.com/*"],
    "js": ["./add_button.js"],
    "css": ["./inject.css"]
  }
],
"background": {
    "scripts": ["./background.js"],
    "persistent": true
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs"
  ]
}
